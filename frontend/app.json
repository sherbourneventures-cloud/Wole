{
  "expo": {
    "name": "QR Visitor Alert",
    "slug": "qr-visitor-alert",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "qr-visitor-alert",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.visitor.qralert",
      "infoPlist": {
        "NSCameraUsageDescription": "Take selfie for visitor verification",
        "NSMicrophoneUsageDescription": "Record video for visitor verification"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f23"
      },
      "package": "com.visitor.qralert",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Take selfie for visitor verification",
          "microphonePermission": "Record video for visitor verification",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
